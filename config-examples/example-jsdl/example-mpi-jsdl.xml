<?xml version="1.0" encoding="UTF-8"?>
<jsdl:JobDefinition xmlns="http://www.example.org/"
	xmlns:jsdl="http://schemas.ggf.org/jsdl/2005/11/jsdl"
	xmlns:jsdl-posix="http://schemas.ggf.org/jsdl/2005/11/jsdl-posix"
	xmlns:jsdl-spmd="http://schemas.ogf.org/jsdl/2007/02/jsdl-spmd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:hpcp-ac="http://schemas.ogf.org/hpcp/2007/11/ac"
	xmlns:wss="http://docs.oasis-open.org/wss/2004/01/oasis-200401-wss-wssecurity-secext-1.0.xsd">
	
	<jsdl:JobDescription>
		<jsdl:JobIdentification>
			<jsdl:JobName>Pass the Token</jsdl:JobName>
			<jsdl:Description>
				A simple MPI program (MPICH) which passes an integer token
				around the COMM_WORLD and increments it at each touch.
			</jsdl:Description>
		</jsdl:JobIdentification>
		
		<jsdl:Application>
			<jsdl:ApplicationName>PassTheToken</jsdl:ApplicationName>
			<jsdl-spmd:SPMDApplication>
				<jsdl-posix:Executable>PassTheToken</jsdl-posix:Executable>
				<jsdl-posix:Output>stdout</jsdl-posix:Output>
				<jsdl-posix:Error>stderr</jsdl-posix:Error>
				<jsdl-spmd:NumberOfProcesses>5</jsdl-spmd:NumberOfProcesses>
				<jsdl-spmd:SPMDVariation>http://www.ogf.org/jsdl/2007/02/jsdl-spmd/MPICH1</jsdl-spmd:SPMDVariation>
			</jsdl-spmd:SPMDApplication>
		</jsdl:Application>

		<jsdl:DataStaging>
			<jsdl:FileName>PassTheToken</jsdl:FileName>
			<jsdl:CreationFlag>overwrite</jsdl:CreationFlag>
			<jsdl:DeleteOnTermination>true</jsdl:DeleteOnTermination>
			<jsdl:Source>
				<jsdl:URI>scp://cicero.cs.virginia.edu/home/mmm2a/MPI/PassTheToken</jsdl:URI>
			</jsdl:Source>
			<hpcp-ac:Credential>
				<wss:UsernameToken>
					<wss:Username>mmm2a</wss:Username>
					<wss:Password>Some password</wss:Password>
				</wss:UsernameToken>
			</hpcp-ac:Credential>
		</jsdl:DataStaging>
		
		<jsdl:DataStaging>
			<jsdl:FileName>stdout</jsdl:FileName>
			<jsdl:CreationFlag>overwrite</jsdl:CreationFlag>
			<jsdl:DeleteOnTermination>true</jsdl:DeleteOnTermination>
			<jsdl:Target>
				<jsdl:URI>rns:mpi.out</jsdl:URI>
			</jsdl:Target>
		</jsdl:DataStaging>
		
		<jsdl:DataStaging>
			<jsdl:FileName>stderr</jsdl:FileName>
			<jsdl:CreationFlag>overwrite</jsdl:CreationFlag>
			<jsdl:DeleteOnTermination>true</jsdl:DeleteOnTermination>
			<jsdl:Target>
				<jsdl:URI>rns:mpi.err</jsdl:URI>
			</jsdl:Target>
		</jsdl:DataStaging>
	</jsdl:JobDescription>
</jsdl:JobDefinition>
