<?xml version="1.0" encoding="UTF-8"?>
<project default="gen.notification-consumer">

	<fail message="wsdl.dir variable not set.">
		<condition>
			<not>
				<isset property="wsdl.dir"/>
			</not>
		</condition>
	</fail>

	<import file="${wsdl.dir}/wsdl-build.xml"/>
	<import file="${wsdl.dir}/common.build.xml"/>

	<condition property="gen.notification-consumer.uptodate">
		<and>
			<common.source.files.uptodate
				targetfile="${temporary.codegen.dir}/wsdl/notification-consumer.flag"/>
			<uptodate targetfile="${temporary.codegen.dir}/wsdl/notification-consumer.flag">
				<srcfiles dir="${wsdl.dir}">
					<include name="notification.xsd"/>
					<include name="notification.wsdl"/>
				</srcfiles>
			</uptodate>
		</and>
	</condition>

	<target name="gen.notification-consumer" unless="gen.notification-consumer.uptodate">
		<copy todir="${temporary.codegen.dir}/wsdl">
			<filelist refid="common.source.files"/>
			<fileset dir="${wsdl.dir}">
				<include name="notification.wsdl"/>
				<include name="notification.xsd"/>
			</fileset>
		</copy>

		<echo message="Generating Service wsdl."/>
		<genii-service-generator
			source="${temporary.codegen.dir}/wsdl/notification.wsdl"
			target="${temporary.codegen.dir}/wsdl/notification-consumer-service.wsdl"
			portType="{http://vcgr.cs.virginia.edu/genii/2006/12/notification}GeniiNotificationConsumerPortType"/>

		<antcall target="gen.stub-generation">
			<param name="stub.gen.target-dir" value="${temporary.codegen.dir}/notification-consumer"/>
			<param name="stub.gen.source-wsdl"
				value="${temporary.codegen.dir}/wsdl/notification-consumer-service.wsdl"/>
			<param name="stub.gen.target-flag-file"
				value="${temporary.codegen.dir}/wsdl/notification-consumer.flag"/>
		</antcall>
	</target>

</project>
