<container-services>

	<variable name="CSERVICES_PKG"
		value="edu.virginia.vcgr.genii.container.cservices"/>
	<variable name="SHARED_DIR" value="/home/mmm2a/shared-directory"/>

	<container-service
		class="${CSERVICES_PKG}.besstatus.BESStatusContainerService"/>

	<!--
		This service is responsible for handing out and reclaiming scratch
		files for BES activities.
	-->
	<container-service
		class="${CSERVICES_PKG}.scratchmgr.ScratchFSManagerContainerService">
<!--
	You can uncomment this and change the value to change where the scratch
	space lives
		<property name="scratch-directory" value="${SHARED_DIR}/scratch"/>
-->
	</container-service>

	<!--
		This service is responsible for downloading files and making sure
		that multiple requests are queued up properly and don't conflict
		with one another.
	-->
	<container-service
		class="${CSERVICES_PKG}.downloadmgr.DownloadManagerContainerService">
<!--
	You can uncomment this and change the value to change where the scratch
	space lives
		<property name="download-tmpdir" value="${SHARED_DIR}/download-tmp"/>
-->
	</container-service>
</container-services>



