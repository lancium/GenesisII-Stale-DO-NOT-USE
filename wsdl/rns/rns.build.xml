<?xml version="1.0" encoding="UTF-8"?>
<project default="gen.rns">

	<fail message="wsdl.dir variable not set.">
		<condition>
			<not>
				<isset property="wsdl.dir"/>
			</not>
		</condition>
	</fail>

	<import file="${wsdl.dir}/wsdl-build.xml"/>
	<import file="${wsdl.dir}/common.build.xml"/>

	<condition property="gen.rns.uptodate">
		<and>
			<common.source.files.uptodate
				targetfile="${temporary.codegen.dir}/wsdl/rns.flag"/>
			<uptodate targetfile="${temporary.codegen.dir}/wsdl/rns.flag">
				<srcfiles dir="${wsdl.dir}/rns">
					<include name="rns.xsd"/>
					<include name="rns.gwsdl"/>
				</srcfiles>
			</uptodate>
		</and>
	</condition>

	<target name="gen.rns" unless="gen.rns.uptodate">
		<copy todir="${temporary.codegen.dir}/wsdl">
			<filelist refid="common.source.files"/>
			<fileset dir="${wsdl.dir}/rns">
				<include name="rns.gwsdl"/>
				<include name="rns.xsd"/>
			</fileset>
		</copy>

		<echo message="Normalizing gwsdl."/>
		<genii-gwsdl-normalizer source="${temporary.codegen.dir}/wsdl/rns.gwsdl"
			target="${temporary.codegen.dir}/wsdl/rns-generated.wsdl"/>

		<echo message="Generating Service gwsdl."/>
		<genii-service-generator
			source="${temporary.codegen.dir}/wsdl/rns-generated.wsdl"
			target="${temporary.codegen.dir}/wsdl/rns-service.wsdl"
			portType="{http://schemas.ggf.org/rns/2006/05/rns}RNSPortType"/>

		<antcall target="gen.stub-generation">
			<param name="stub.gen.target-dir" value="${temporary.codegen.dir}/rns"/>
			<param name="stub.gen.source-wsdl"
				value="${temporary.codegen.dir}/wsdl/rns-service.wsdl"/>
			<param name="stub.gen.target-flag-file"
				value="${temporary.codegen.dir}/wsdl/rns.flag"/>
		</antcall>
		<move file="${temporary.codegen.dir}/rns/org/ggf/rns/deploy.wsdd"
			tofile="${wsdd.dir}/rns.deploy.wsdd"/>
		<replace file="${wsdd.dir}/rns.deploy.wsdd"
			token="org.ggf.rns.RNSSOAPBindingImpl"
			value="edu.virginia.vcgr.genii.container.rns.RNSServiceImpl"
			summary="yes"/>
		<copy file="${wsdd.dir}/rns.deploy.wsdd"
			todir="${services.dir}"/>
	</target>

</project>
