<?xml version="1.0" encoding="UTF-8"?>
<project default="gen.rbyteiointerop">

	<fail message="wsdl.dir variable not set.">
		<condition>
			<not>
				<isset property="wsdl.dir"/>
			</not>
		</condition>
	</fail>

	<import file="${wsdl.dir}/wsdl-build.xml"/>
	<import file="${wsdl.dir}/common.build.xml"/>

	<condition property="gen.rbyteiointerop.uptodate">
		<and>
			<common.source.files.uptodate
				targetfile="${temporary.codegen.dir}/wsdl/rbyteiointerop.flag"/>
			<uptodate targetfile="${temporary.codegen.dir}/wsdl/rbyteiointerop.flag">
				<srcfiles dir="${wsdl.dir}/byteio">
					<include name="rbyteio.gwsdl"/>
					<include name="rbyteio.xsd"/>
					<include name="byteio.xsd"/>
				</srcfiles>
				<srcfiles dir="${wsdl.dir}/byteio/interop">
					<include name="rbyteiointerop.xsd"/>
					<include name="rbyteiointerop.gwsdl"/>
					<include name="byteiointeropfactory.wsdl"/>
				</srcfiles>
			</uptodate>
		</and>
	</condition>

	<target name="gen.rbyteiointerop" unless="gen.rbyteiointerop.uptodate">
		<copy todir="${temporary.codegen.dir}/wsdl">
			<filelist refid="common.source.files"/>
			<fileset dir="${wsdl.dir}/byteio">
				<include name="rbyteio.gwsdl"/>
				<include name="rbyteio.xsd"/>
				<include name="byteio.xsd"/>
			</fileset>
			<fileset dir="${wsdl.dir}/byteio/interop">
				<include name="rbyteiointerop.xsd"/>
				<include name="rbyteiointerop.gwsdl"/>
				<include name="byteiointeropfactory.wsdl"/>
			</fileset>
		</copy>

		<echo message="Normalizing gwsdl."/>
		<genii-gwsdl-normalizer source="${temporary.codegen.dir}/wsdl/rbyteiointerop.gwsdl"
			target="${temporary.codegen.dir}/wsdl/rbyteiointerop-generated.wsdl"/>

		<echo message="Generating Service gwsdl."/>
		<genii-service-generator
			source="${temporary.codegen.dir}/wsdl/rbyteiointerop-generated.wsdl"
			target="${temporary.codegen.dir}/wsdl/rbyteiointerop-service.wsdl"
			portType="{http://schemas.ggf.org/byteio/2005/10/random-access}RandomByteIOInteropPortType"/>

		<antcall target="gen.stub-generation">
			<param name="stub.gen.target-dir" value="${temporary.codegen.dir}/rbyteiointerop"/>
			<param name="stub.gen.source-wsdl"
				value="${temporary.codegen.dir}/wsdl/rbyteiointerop-service.wsdl"/>
			<param name="stub.gen.target-flag-file"
				value="${temporary.codegen.dir}/wsdl/rbyteiointerop.flag"/>
		</antcall>
		<move file="${temporary.codegen.dir}/rbyteiointerop/org/ggf/rbyteio/deploy.wsdd"
			tofile="${wsdd.dir}/rbyteiointerop.deploy.wsdd"/>
		<replace file="${wsdd.dir}/rbyteiointerop.deploy.wsdd"
			token="org.ggf.rbyteio.RandomByteIOInteropSOAPBindingImpl"
			value="edu.virginia.vcgr.genii.container.byteio.interop.RandomByteIOInteropServiceImpl"
			summary="yes"/>
		<copy file="${wsdd.dir}/rbyteiointerop.deploy.wsdd"
			todir="${services.dir}"/>
	</target>

</project>
