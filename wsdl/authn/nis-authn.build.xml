<?xml version="1.0" encoding="UTF-8"?>
<project default="gen.nis-authn">

	<fail message="wsdl.dir variable not set.">
		<condition>
			<not>
				<isset property="wsdl.dir"/>
			</not>
		</condition>
	</fail>

	<import file="${wsdl.dir}/wsdl-build.xml"/>
	<import file="${wsdl.dir}/common.build.xml"/>

	<condition property="gen.nis-authn.uptodate">
		<and>
			<common.source.files.uptodate
				targetfile="${temporary.codegen.dir}/wsdl/nis-authn.flag"/>
			<uptodate targetfile="${temporary.codegen.dir}/wsdl/nis-authn.flag">
				<srcfiles dir="${wsdl.dir}/authn">
					<include name="ws-trust-1.3.xsd"/>
					<include name="ws-trust-1.3.wsdl"/>
					<include name="nis-authn.gwsdl"/>
				</srcfiles>
			</uptodate>
		</and>
	</condition>

	<target name="gen.nis-authn" unless="gen.nis-authn.uptodate">
		<copy todir="${temporary.codegen.dir}/wsdl">
			<filelist refid="common.source.files"/>
			<fileset dir="${wsdl.dir}/authn">
				<include name="ws-trust-1.3.xsd"/>
				<include name="ws-trust-1.3.wsdl"/>
				<include name="nis-authn.gwsdl"/>
			</fileset>
		</copy>

		<echo message="Normalizing gwsdl."/>
		<genii-gwsdl-normalizer source="${temporary.codegen.dir}/wsdl/nis-authn.gwsdl"
			target="${temporary.codegen.dir}/wsdl/nis-authn-generated.wsdl"/>

		<echo message="Generating Service gwsdl."/>
		<genii-service-generator
			source="${temporary.codegen.dir}/wsdl/nis-authn-generated.wsdl"
			target="${temporary.codegen.dir}/wsdl/nis-authn-service.wsdl"
			portType="{http://vcgr.cs.virginia.edu/container/2007/11/nis-authn}NISAuthnPortType"/>

		<antcall target="gen.stub-generation">
			<param name="stub.gen.target-dir" value="${temporary.codegen.dir}/nis-authn"/>
			<param name="stub.gen.source-wsdl"
				value="${temporary.codegen.dir}/wsdl/nis-authn-service.wsdl"/>
			<param name="stub.gen.target-flag-file"
				value="${temporary.codegen.dir}/wsdl/nis-authn.flag"/>
		</antcall>
		<move file="${temporary.codegen.dir}/nis-authn/edu/virginia/vcgr/genii/NISAuthn/deploy.wsdd"
			tofile="${wsdd.dir}/NISAuthn.deploy.wsdd"/>
		<replace file="${wsdd.dir}/NISAuthn.deploy.wsdd"
			token="edu.virginia.vcgr.genii.nisauthn.NISAuthnSOAPBindingImpl"
			value="edu.virginia.vcgr.genii.container.nisauthn.NISAuthnServiceImpl"
			summary="yes"/>
		<copy file="${wsdd.dir}/NISAuthn.deploy.wsdd"
			todir="${services.dir}"/>
	</target>

</project>
