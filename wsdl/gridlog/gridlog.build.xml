<?xml version="1.0" encoding="UTF-8"?>
<project default="gen.gridlog">

	<fail message="wsdl.dir variable not set.">
		<condition>
			<not>
				<isset property="wsdl.dir"/>
			</not>
		</condition>
	</fail>

	<import file="${wsdl.dir}/wsdl-build.xml"/>
	<import file="${wsdl.dir}/common.build.xml"/>

	<condition property="gen.gridlog.uptodate">
		<and>
			<common.source.files.uptodate
				targetfile="${temporary.codegen.dir}/wsdl/gridlog.flag"/>
			<uptodate targetfile="${temporary.codegen.dir}/wsdl/gridlog.flag">
				<srcfiles dir="${wsdl.dir}/gridlog">
					<include name="gridlog.xsd"/>
					<include name="gridlog.gwsdl"/>
				</srcfiles>
			</uptodate>
		</and>
	</condition>

	<target name="gen.gridlog" unless="gen.gridlog.uptodate">
		<copy todir="${temporary.codegen.dir}/wsdl">
			<filelist refid="common.source.files"/>
			<fileset dir="${wsdl.dir}/gridlog">
				<include name="gridlog.gwsdl"/>
				<include name="gridlog.xsd"/>
			</fileset>
		</copy>

		<echo message="Normalizing gwsdl."/>
		<genii-gwsdl-normalizer source="${temporary.codegen.dir}/wsdl/gridlog.gwsdl"
			target="${temporary.codegen.dir}/wsdl/gridlog-generated.wsdl"/>

		<echo message="Generating Service gwsdl."/>
		<genii-service-generator
			source="${temporary.codegen.dir}/wsdl/gridlog-generated.wsdl"
			target="${temporary.codegen.dir}/wsdl/gridlog-service.wsdl"
			portType="{http://vcgr.cs.virginia.edu/genii/gridlog}GridLogPortType"/>

		<antcall target="gen.stub-generation">
			<param name="stub.gen.target-dir" value="${temporary.codegen.dir}/gridlog"/>
			<param name="stub.gen.source-wsdl"
				value="${temporary.codegen.dir}/wsdl/gridlog-service.wsdl"/>
			<param name="stub.gen.target-flag-file"
				value="${temporary.codegen.dir}/wsdl/gridlog.flag"/>
		</antcall>
		<move file="${temporary.codegen.dir}/gridlog/edu/virginia/vcgr/genii/gridlog/deploy.wsdd"
			tofile="${wsdd.dir}/gridlog.deploy.wsdd"/>
		<replace file="${wsdd.dir}/gridlog.deploy.wsdd"
			token="edu.virginia.vcgr.genii.gridlog.GridLogSOAPBindingImpl"
			value="edu.virginia.vcgr.genii.container.gridlog.GridLogServiceImpl"
			summary="yes"/>
		<copy file="${wsdd.dir}/gridlog.deploy.wsdd"
			todir="${services.dir}"/>
	</target>

</project>
