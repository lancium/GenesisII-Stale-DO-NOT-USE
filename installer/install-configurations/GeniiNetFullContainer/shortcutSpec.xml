<shortcuts>
	<skipIfNotSupported/>

	<programGroup defaultName="Genesis II" location="startMenu"/>

	<shortcut
		programGroup="yes"
		desktop="yes"
		applications="no"
		startMenu="no"
		startup="no"
		name="Genesis II Login"
		target="$INSTALL_PATH/grid.bat"
		commandLine="login"
		workingDirectory="$INSTALL_PATH"
		description="Log in to the Genesis II grid."
		initialState="normal"
		iconFile="%SystemRoot%\system32\shell32.dll"
		iconIndex="111">
	</shortcut>

	<shortcut
		programGroup="yes"
		desktop="yes"
		applications="no"
		startMenu="no"
		startup="no"
		name="Genesis II FTPD"
		target="$INSTALL_PATH/grid.bat"
		commandLine="ftpd --block"
		workingDirectory="$INSTALL_PATH"
		description="Run the Genesis II FTP Daemon."
		initialState="normal"
		iconFile="%SystemRoot%\system32\shell32.dll"
		iconIndex="92">
	</shortcut>

	<shortcut
		programGroup="yes"
		desktop="yes"
		applications="no"
		startMenu="no"
		startup="no"
		name="Genesis II Export"
		target="$INSTALL_PATH/grid.bat"
		commandLine="export"
		workingDirectory="$INSTALL_PATH"
		description="Run the Genesis II Export GUI."
		initialState="noShow"
		iconFile="%SystemRoot%\system32\shell32.dll"
		iconIndex="158">
		<createForPack name="StartGeniiNetFullContainer"/>
	</shortcut>

	<shortcut
		programGroup="yes"
		desktop="yes"
		applications="no"
		startMenu="no"
		startup="no"
		name="Genesis II Grid Shell"
		target="$INSTALL_PATH/grid.bat"
		workingDirectory="$INSTALL_PATH"
		description="Run the Genesis II Grid Shell."
		initialState="normal"
		iconFile="%SystemRoot%\system32\shell32.dll"
		iconIndex="133">
	</shortcut>

	<shortcut
		programGroup="yes"
		desktop="yes"
		applications="no"
		startMenu="no"
		startup="no"
		name="Genesis II IFS"
		target="$INSTALL_PATH/grid.bat"
		workingDirectory="$INSTALL_PATH"
		description="Run the Genesis II Installable File System."
		initialState="normal"
		iconFile="%SystemRoot%\system32\shell32.dll"
		iconIndex="85">
		<createForPack name="IFS"/>
	</shortcut>

</shortcuts>
