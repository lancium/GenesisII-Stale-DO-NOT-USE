<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="gen.informationService" name="informationService.build">

	<condition property="gen.informationService.uptodate">
		<and>
			<common.source.files.uptodate
				targetfile="${codegen-dir}/wsdl/informationService.flag"/>
			<uptodate targetfile="${codegen-dir}/wsdl/informationService.flag">
				<srcfiles dir="${wsdl-dir}/informationService">
					<include name="informationService.xsd"/>
					<include name="informationService.gwsdl"/>
				</srcfiles>
			</uptodate>
		</and>
	</condition>

	<target name="gen.informationService" unless="gen.informationService.uptodate">
		<copy todir="${codegen-dir}/wsdl">
			<fileset refid="common.source.files"/>
			<fileset dir="${wsdl-dir}/informationService">
				<include name="informationService.gwsdl"/>
				<include name="informationService.xsd"/>
				<include name="jsdl.xsd"/>
			</fileset>
		</copy>

		<echo message="Normalizing gwsdl."/>
		<genii-gwsdl-normalizer source="${codegen-dir}/wsdl/informationService.gwsdl"
			target="${codegen-dir}/wsdl/informationService-generated.wsdl"/>

		<echo message="Generating Service gwsdl."/>
		<genii-service-generator
			source="${codegen-dir}/wsdl/informationService-generated.wsdl"
			target="${codegen-dir}/wsdl/informationService-service.wsdl"
			portType="{http://vcgr.cs.virginia.edu/genii/informationService}InformationServicePortType"/>

		<antcall target="gen.stub-generation">
			<param name="stub.gen.target-dir" value="${codegen-dir}/informationService"/>
			<param name="stub.gen.source-wsdl"
				value="${codegen-dir}/wsdl/informationService-service.wsdl"/>
			<param name="stub.gen.target-flag-file"
				value="${codegen-dir}/wsdl/informationService.flag"/>
		</antcall>
		<move file="${codegen-dir}/informationService/edu/virginia/vcgr/genii/informationService/deploy.wsdd"
			tofile="${wsdd-dir}/informationService.deploy.wsdd"/>
		<replace file="${wsdd-dir}/informationService.deploy.wsdd"
			token="edu.virginia.vcgr.genii.informationService.InformationServiceSOAPBindingImpl"
			value="edu.virginia.vcgr.genii.container.informationService.InformationServiceImpl"
			summary="yes"/>
		<copy file="${wsdd-dir}/informationService.deploy.wsdd"
			todir="${services.dir}"/>
	</target>

</project>