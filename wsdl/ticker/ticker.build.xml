<?xml version="1.0" encoding="UTF-8"?>
<project default="gen.ticker">

	<fail message="wsdl.dir variable not set.">
		<condition>
			<not>
				<isset property="wsdl.dir"/>
			</not>
		</condition>
	</fail>

	<import file="${wsdl.dir}/wsdl-build.xml"/>
	<import file="${wsdl.dir}/common.build.xml"/>

	<condition property="gen.ticker.uptodate">
		<and>
			<common.source.files.uptodate
				targetfile="${temporary.codegen.dir}/wsdl/ticker.flag"/>
			<uptodate targetfile="${temporary.codegen.dir}/wsdl/ticker.flag">
				<srcfiles dir="${wsdl.dir}/ticker">
					<include name="ticker-factory.gwsdl"/>
					<include name="ticker-factory.wsdl"/>
					<include name="ticker-factory.xsd"/>
				</srcfiles>
			</uptodate>
		</and>
	</condition>

	<target name="gen.ticker" unless="gen.ticker.uptodate">
		<copy todir="${temporary.codegen.dir}/wsdl">
			<filelist refid="common.source.files"/>
			<fileset dir="${wsdl.dir}/ticker">
				<include name="ticker-factory.gwsdl"/>
				<include name="ticker-factory.wsdl"/>
				<include name="ticker-factory.xsd"/>
			</fileset>
		</copy>

		<echo message="Normalizing gwsdl."/>
		<genii-gwsdl-normalizer source="${temporary.codegen.dir}/wsdl/ticker-factory.gwsdl"
			target="${temporary.codegen.dir}/wsdl/ticker-factory-generated.wsdl"/>

		<echo message="Generating Service gwsdl."/>
		<genii-service-generator
			source="${temporary.codegen.dir}/wsdl/ticker-factory-generated.wsdl"
			target="${temporary.codegen.dir}/wsdl/ticker-factory-service.wsdl"
    		portType="{http://schemas.ogf.org/ogsa/2007/12/wsrf-bp-interop/ticker-factory}TickerFactory"/>

		<antcall target="gen.stub-generation">
			<param name="stub.gen.target-dir" value="${temporary.codegen.dir}/ticker"/>
			<param name="stub.gen.source-wsdl"
				value="${temporary.codegen.dir}/wsdl/ticker-factory-service.wsdl"/>
			<param name="stub.gen.target-flag-file"
				value="${temporary.codegen.dir}/wsdl/ticker.flag"/>
		</antcall>
		<move file="${temporary.codegen.dir}/ticker/org/ogf/ogsa/ticker/deploy.wsdd"
			tofile="${wsdd.dir}/ticker.deploy.wsdd"/>
		<replace file="${wsdd.dir}/ticker.deploy.wsdd"
			token="org.ogf.ogsa.ticker.TickerFactorySOAPBindingImpl"
			value="edu.virginia.vcgr.genii.container.ticker.TickerServiceImpl"
			summary="yes"/>
		<copy file="${wsdd.dir}/ticker.deploy.wsdd"
			todir="${services.dir}"/>
	</target>

</project>
