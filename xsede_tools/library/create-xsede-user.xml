<?xml version="1.0" encoding="utf-8" ?>

<!-- Creates an XSEDE kerberos/myproxy user within the XSEDE namespace. -->

<gsh:script
	xmlns:gsh="http://vcgr.cs.virginia.edu/genii/xsh/script"
	xmlns:geniix="http://vcgr.cs.virginia.edu/genii/xsh/grid"
	xmlns="http://vcgr.cs.virginia.edu/genii/xsh/script">

<!--
parameters for this script are:

1: the new user name.

-->

			<geniix:idp>
				<param>--kerbRealm=TERAGRID.ORG</param>
				<param>--kerbKdc=kerberos.teragrid.org</param>
				<param>--validDuration=10years</param>
				<param>/resources/xsede.org/containers/sts-1.xsede.org/Services/KerbAuthnPortType</param>
				<param>${ARGV[1]}</param>
			</geniix:idp>

			<geniix:ln>
				<param>/resources/xsede.org/containers/sts-1.xsede.org/Services/KerbAuthnPortType/${ARGV[1]}</param>
				<param>/users/xsede.org/${ARGV[1]}</param>
			</geniix:ln>

			<geniix:mkdir>
				<param>--parents</param>
				<param>/home/xsede.org/${ARGV[1]}</param>
			</geniix:mkdir>

			<geniix:chmod>
				<param>/users/xsede.org/${ARGV[1]}</param>
				<param>5</param>
				<param>/users/xsede.org/${ARGV[1]}</param>
			</geniix:chmod>
			
			<geniix:chmod>
				<param>/home/xsede.org/${ARGV[1]}</param>
				<param>7</param>
				<param>/users/xsede.org/${ARGV[1]}</param>
			</geniix:chmod>

</gsh:script>
